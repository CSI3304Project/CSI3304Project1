SET @g1 = GeomFromText('POLYGON((1010 1010,1020 1020,1030 1030,1040 1030,1020 1010,1010 1010))');

SET @g2 = GeomFromText('LINESTRING(400 400,500 500,600 700)');

SELECT c1,AsText(c2),AsText(c3),Astext(c4) FROM tab WHERE Within(tab.c4, @g1) AND Within(tab.c3, @g2);

UPDATE tab SET c2 = GeomFromText('POINT(2000 2000)'),
           c3=GeomFromText('POINT(2000 2000)')
WHERE Within(tab.c4, @g1) AND Within(tab.c3, @g2);

SET @g1 = GeomFromText('POINT(2000 2000)');

SET @g2 = GeomFromText('POINT(2000 2000)');

SELECT c1,AsText(c2),AsText(c3),Astext(c4) FROM tab WHERE Within(tab.c2, @g1) AND Within(tab.c3, @g2);

DELETE FROM tab WHERE Within(tab.c2, @g1) AND Within(tab.c3, @g2);

SELECT c1,AsText(c2),AsText(c3),Astext(c4) FROM tab WHERE Within(tab.c2, @g1) AND Within(tab.c3, @g2);

#cleanup
DROP TABLE tab;

