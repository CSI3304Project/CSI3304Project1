# The execution of mysql_secure_installation using perl which uses the
# Expect module as mysql_secure_installation is user interactive.
--perl

use strict;
require Expect;

# Declaring variables for Expect
my @texp;
my $i;

# Aggregating the commands which are executed post the password is input to 
# mysql_secure_installation into a function with the values no. 
sub after_commands()
{
   $texp[$i]->expect(5,' -re ',[ 'anonymous users' => sub {
$texp[$i]->send("n\n");}]);
   $texp[$i]->expect(5,' -re ',[ 'root login' => sub {
$texp[$i]->send("n\n");}]);
   $texp[$i]->expect(5,' -re ',[ 'test database' => sub {
$texp[$i]->send("n\n");}]);
   $texp[$i]->expect(5,' -re ',[ 'Reload' => sub { $texp[$i]->send("n\n");}]);
   print "Execution number $i was successful\n";
}

# Defining a new Expect object and invoking mysql_secure_installation
sub initial_commands()
{
   $texp[$i] = new Expect();
   $texp[$i]->raw_pty(1);
}

# Aggregating the commands which are executed post the password is input to 
# mysql_secure_installation into a function with the values yes.
sub after_effects()
{
   $texp[$i]->expect(5,' -re ',[ 'anonymous users' => sub {
$texp[$i]->send("y\n");}]);
   $texp[$i]->expect(5,' -re ',[ 'root login' => sub {
$texp[$i]->send("y\n");}]);
   $texp[$i]->expect(5,' -re ',[ 'test database' => sub {
$texp[$i]->send("y\n");}]);
   $texp[$i]->expect(5,' -re ',[ 'Reload' => sub { $texp[$i]->send("y\n");}]);
   print "Execution number $i was successful\n";
}

$i = 1;

# Invoking mysql_secure_installation.
initial_commands();
if (-e $ENV{MASTER_MYSOCK} ){
   $texp[$i]->spawn("$ENV{MYSQL_SECURE_INSTALLATION} -S $ENV{MASTER_MYSOCK }");
}
$texp[$i]->expect(5,' -re ',[ 'any other key for No' => sub {
$texp[$i]->send("n\n");}]);
$texp[$i]->expect(5,' -re ',[ 'New password' => sub {
$texp[$i]->send("1\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Re-enter' => sub { $texp[$i]->send("1\n");}]);
after_commands();
$i++;

# Invoking mysql_secure_installation with different password values.

initial_commands();
if (-e $ENV{MASTER_MYSOCK} ){
   $texp[$i]->spawn("$ENV{MYSQL_SECURE_INSTALLATION} -S $ENV{MASTER_MYSOCK } -p");
}
$texp[$i]->expect(5,' -re ',[ 'password' => sub {
$texp[$i]->send("1\n");}]);
$texp[$i]->expect(5,' -re ',[ 'any other key for No' => sub {
$texp[$i]->send("n\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Change the root password' => sub {
$texp[$i]->send("y\n");}]);
$texp[$i]->expect(5,' -re ',[ 'New password' => sub {
$texp[$i]->send("null\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Re-enter' => sub { $texp[$i]->send("null\n");}]);
after_effects();
$i++;

# Invoking mysql_secure_installation and installing the validate_password plugin.
initial_commands();
if (-e $ENV{MASTER_MYSOCK} ){
   $texp[$i]->spawn("$ENV{MYSQL_SECURE_INSTALLATION} -S $ENV{MASTER_MYSOCK } -p");
}
$texp[$i]->expect(5,' -re ',[ 'password' => sub {
$texp[$i]->send("null\n");}]);
$texp[$i]->expect(5,' -re ',[ 'any other key for No' => sub {
$texp[$i]->send("y\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Please enter' => sub {
$texp[$i]->send("1\n");}]);
$texp[$i]->expect(5,' -re ',[ 'root password' => sub {
$texp[$i]->send("y\n");}]);
$texp[$i]->expect(5,' -re ',[ 'New password' => sub {
$texp[$i]->send("passPASS1234!@#\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Re-enter' => sub {
$texp[$i]->send("passPASS1234!@#\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Do you' => sub { $texp[$i]->send("y\n");}]);
after_effects();
$i++;

initial_commands();
if (-e $ENV{MASTER_MYSOCK} ){
   $texp[$i]->spawn("$ENV{MYSQL_SECURE_INSTALLATION} -S $ENV{MASTER_MYSOCK } -p");
}
$texp[$i]->expect(5,' -re ',[ 'password' => sub {
$texp[$i]->send("passPASS1234!@#\n");}]);
$texp[$i]->expect(5,' -re ',[ 'any other key for No' => sub {
$texp[$i]->send("y\n");}]);
$texp[$i]->expect(5,' -re ',[ 'New password' => sub {
$texp[$i]->send("secure\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Re-enter new password' => sub {
$texp[$i]->send("secure\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Do you' => sub { $texp[$i]->send("y\n");}]);
$texp[$i]->expect(5,' -re ',[ 'New password' => sub {
$texp[$i]->send("secureINSTALL09)(\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Re-enter new password' => sub {
$texp[$i]->send("secureINSTALL09)(\n");}]);
$texp[$i]->expect(5,' -re ',[ 'Do you' => sub { $texp[$i]->send("y\n");}]);
after_effects();
$i++;

initial_commands();
if (-e $ENV{MASTER_MYSOCK} ){
   $texp[$i]->spawn("$ENV{MYSQL_SECURE_INSTALLATION} -S $ENV{MASTER_MYSOCK } -D -p");
}
$texp[$i]->expect(5,' -re ',[ 'password' => sub {
$texp[$i]->send("secureINSTALL09)(\n");}]);
print("Execution ".$i." was successful\n");
$i++;

EOF

