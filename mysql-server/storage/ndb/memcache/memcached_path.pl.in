# memcached_path.pm is generated by CMake from memcached_path.pm.in

use strict;

sub memcached_is_available() {
  if("@MEMCACHED_FOUND@" eq "TRUE") {
    return 1;
  }
  else {
    return 0;
  }
}

sub memcached_is_bundled() {
  return ("@WITH_BUNDLED_MEMCACHED@" eq "ON") ? 1 : 0;
}

sub get_memcached_exe_path() {
  return "@MEMCACHED_BIN_PATH@";
}

1;

